<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/resturantFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.finalProject.myapplication.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_resturantFragment"
            app:destination="@id/resturantFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/resturantFragment"
        android:name="com.finalProject.myapplication.ui.ResturantFragment"
        android:label="fragment_resturant"
        tools:layout="@layout/fragment_resturant" >
        <action
            android:id="@+id/action_resturantFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/ResturantFragmentToDirectionFragment"
            app:destination="@id/directionFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.finalProject.myapplication.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="data"
            app:argType="com.finalProject.myapplication.Models.DataP" />
        <action
            android:id="@+id/profileFragmentToResturantFragment"
            app:destination="@id/resturantFragment" />
    </fragment>
    <fragment
        android:id="@+id/directionFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:label="fragment_direction"
        tools:layout="@layout/fragment_direction" >
        <action
            android:id="@+id/action_directionFragment_to_resturantFragment"
            app:destination="@id/resturantFragment" />
    </fragment>
</navigation>